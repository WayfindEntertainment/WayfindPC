{
    "trailingComma": "none",
    "tabWidth": 4,
    "semi": false,
    "singleQuote": true,
    "printWidth": 100,
    "overrides": [
        {
            "files": ["*.yml", "*.yaml"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": ["*.md"],
            "options": {
                "proseWrap": "always"
            }
        },
        {
            "files": ["*.html", "*.css", "*.scss"],
            "options": {
                "singleQuote": false
            }
        },
        {
            "files": ["*.php"],
            "options": {
                "tabWidth": 4
            }
        }
    ]
}
